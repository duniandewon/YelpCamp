<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp</h1>
        <a href="/campgrounds/new" class="btn btn-primary">New Campground</a>
    </header>
    
    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div>
                <div class="card mb-3">
                    <a href="/campgrounds/<%= campground._id %>"><img src="<%= campground.image %>"></a>
                    <div class="card-body">
                        <a href="/campgrounds/<%= campground._id %>" class="title"><h5 class="card-title"><%= campground.name %></h5></a>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
    </div>
</div>

<% include ../partials/footer %>