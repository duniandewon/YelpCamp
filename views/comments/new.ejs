<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-6">
            <h1 class="text-center">Create new Comment to <%= campground.name %></h1>
            
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST" class="mt-4">
                <div class="form-group text-center">
                    <input type="text" name="comment[text]" class="form-control mb-3" placeholder="Comment...">
                    <div class="row">
                        <div class="col-md-6">
                            <button class="btn btn-secondary btn-lg btn-block">Submit</button>
                        </div>
                        <div class="col-md-6">
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-info btn-lg btn-block" title="Go back">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>